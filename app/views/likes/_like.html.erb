<% if user_signed_in? %>
  <% if current_user.already_liked?(post) %>
    <%= link_to(channel_post_likes_path(@channel, post), method: :delete, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= post.likes.count %>
            </i>
    <% end %>
  <% else %>
    <%= link_to(channel_post_likes_path(@channel, post), method: :post, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
                <%= post.likes.count %>
            </i>
    <% end %>
  <% end %>
<% else %>
<i class="fa fa-heart" aria-hidden="true">
            <%= post.likes.count %>
    </i>
<% end %>
